server {
  listen ${NGINX_PORT};

  location ${ROOT_PATH} {
      proxy_pass http://app:8080;
      rewrite ^${ROOT_PATH}(/|$)(.*) /$2 break;
      proxy_no_cache 1;
      proxy_cache_bypass 1;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
  }

  location / {
      proxy_pass http://host.docker.internal:${FRONTEND_PORT};
      proxy_no_cache 1;
      proxy_cache_bypass 1;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
  }
}
